
<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px; /* Add some space below the table */
  }
  th, td {
    padding: 8px; /* Add padding to the table cells */
    text-align: left; /* Align text to the left */
    border-bottom: 1px solid #ddd; /* Add bottom border to separate rows */
  }
  th {
    background-color: #f2f2f2; /* Add background color to header row */
  }
</style>

<h1>List of Capsules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th> <!-- Add price column header -->
    </tr>
  </thead>
  <tbody>
    <% @capsules.each do |capsule| %>
      <tr>
        <td><%= capsule.name %></td>
        <td><%= capsule.description %></td>
        <td><%= capsule.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>


