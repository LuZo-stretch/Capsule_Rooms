
<h1>List of Capsules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th> <!-- Add price column header -->
    </tr>
  </thead>
  <tbody>
    <% @capsules.each do |capsule| %>
      <tr>
        <td><%= link_to capsule.name, capsule_path(capsule) %></td>
        <td><%= capsule.description %></td>
        <td><%= capsule.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>


